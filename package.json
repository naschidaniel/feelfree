{
  "name": "flying-in-tirol",
  "version": "2.0.0",
  "private": true,
  "description": "fly-tirol.com paragliding school Westendorf and bikeandfly.at tandemflights",
  "author": "Daniel Naschberger",
  "precommit": "yarn lint",
  "type": "module",
  "scripts": {
    "dev": "nuxt dev --host 127.0.0.1 --port 3000",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate --modern",
    "lint": "eslint --fix --ext \".js,.ts,.vue\" --ignore-path .gitignore .",
    "lintContent": "eslint --no-error-on-unmatched-pattern --fix --ext \".vue,.js,.ts\" content_flytirol content_bikeandfly content_hydrogen data",
    "generateContent": "node generateContent.js && yarn lintContent",
    "generateMediaInformation": "node generateMediaInformation.js && yarn lintContent",
    "create-public:flytirol": "rm -rf .public_flytirol && cp -r public_flytirol/ .public_flytirol",
    "optimize-images:flytirol": "yarn create-public:flytirol && ./image-optimizer --source public_flytirol/media --destination .public_flytirol/media --widths 384 512 640 768 1024 1280 1536 --qualities 95 90 80 75 75 75 75",
    "create-public:bikeandfly": "rm -rf .public_bikeandfly && cp -r public_bikeandfly/ .public_bikeandfly",
    "optimize-images:bikeandfly": "yarn create-public:bikeandfly && ./image-optimizer --source public_bikeandfly/media --destination .public_bikeandfly/media --widths 384 512 640 768 1024 1280 1536 --qualities 95 90 80 75 75 75 75",
    "create-public:hydrogen": "rm -rf .public_hydrogen && cp -r public_hydrogen/ .public_hydrogen",
    "optimize-images:hydrogen": "yarn create-public:hydrogen && ./image-optimizer --source public_hydrogen/media --destination .public_hydrogen/media --widths 384 512 640 768 1024 1280 1536 --qualities 95 90 80 75 75 75 75",
    "optimize-images": "yarn optimize-images:flytirol && yarn optimize-images:bikeandfly && yarn optimize-images:hydrogen",
    "create-public": "yarn generateMediaInformation && yarn create-public:flytirol && yarn create-public:bikeandfly && yarn create-public:hydrogen",
    "buildDev": "yarn create-public && yarn optimize-images && yarn generateContent",
    "buildDev:bikeandfly": "yarn create-public:bikeandfly && yarn optimize-images:bikeandfly && yarn generateContent",
    "buildDev:flytirol": "yarn create-public:flytirol && yarn optimize-images:flytirol && yarn generateContent",
    "buildDev:hydrogen": "yarn create-public:hydrogen && yarn optimize-images:hydrogen && yarn generateContent",
    "openapi": "openapi --input https://fly-tirol.com/shop/swagger.json --output ./types/shop --client fetch --exportModels true --exportCore false --exportSchemas false --exportServices false"
  },
  "dependencies": {
    "@nuxtjs/tailwindcss": "^6.11.4",
    "core-js": "^3.36.0",
    "heroicons": "^2.1.1",
    "leaflet": "^1.9.4",
    "nuxt": "^3.10.3",
    "simple-icons": "^11.8.0"
  },
  "devDependencies": {
    "@nuxt/kit": "^3.10.3",
    "@nuxt/postcss8": "^1.1.3",
    "@nuxtjs/eslint-config": "^12.0.0",
    "@nuxtjs/eslint-config-typescript": "^12.1.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.7",
    "@types/node": "^20.10.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-nuxt": "^4.0.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-vue": "^9.23.0",
    "glob": "^10.3.10",
    "image-size": "^1.1.1",
    "marked": "^12.0.1",
    "nitropack": "^2.9.3",
    "openapi-typescript-codegen": "^0.27.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.2",
    "vue-tsc": "^1.8.27"
  }
}
